{
  "homepage": "https://jepeteo.github.io/portfolio/",
  "name": "portfolio",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "echo \"Add tests here\" && exit 0",
    "performance:check": "node scripts/performance-budget-check.js",
    "performance:analyze": "npm run build && npx vite-bundle-visualizer -o bundle-report.html",
    "performance:size": "npx bundlewatch --config bundlewatch.config.json",
    "audit:security": "npm audit && npx audit-ci",
    "audit:deps": "npx depcheck && npx npm-check-updates",
    "ci": "echo \"Skipping lint and type-check\" && npm run build",
    "lighthouse": "npm run build && npm run preview & sleep 10 && npx lighthouse http://localhost:4173 --output=html --output-path=lighthouse-report.html && pkill -f 'vite preview'",
    "clean": "npx rimraf dist node_modules/.vite",
    "prepare": "echo \"Skipping lint and type-check in prepare script\""
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@formspree/react": "^2.5.5",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/validator": "^13.12.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "flowbite": "^2.4.1",
    "flowbite-react": "^0.10.2",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.511.0",
    "nanoid": "^5.0.9",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.23.1",
    "react-typed": "^2.0.12",
    "tailwind-merge": "^3.3.1",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.3.4",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.1.1",
    "globals": "^16.3.0",
    "npm-check-updates": "^18.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^5.2.14",
    "vite-bundle-visualizer": "^1.2.1",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}